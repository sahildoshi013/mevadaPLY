<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/walletitem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:background="@drawable/cardlayoutshape"
    android:orientation="horizontal"
    android:paddingBottom="20dp"
    android:paddingTop="20dp">

    <ImageView
        android:id="@+id/order_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/passbook_recieve_12dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Test description wndak"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/order_icon" />

    <TextView
        android:id="@+id/order_currency_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="+0.02"
        android:visibility="gone"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@id/tvDate" />

    <ImageView
        android:id="@+id/order_icon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/passbook_recieve_12dp"
        app:layout_constraintLeft_toLeftOf="@id/tvDate"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvDate" />

    <TextView
        android:id="@+id/order_currency_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="$200342"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@id/order_icon1"
        app:layout_constraintTop_toBottomOf="@id/tvDate" />

    <TextView
        android:id="@+id/order_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="BUY"
        android:textColor="@android:color/holo_green_light"
        android:textSize="15dp"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@id/order_currency_price"
        app:layout_constraintTop_toBottomOf="@id/tvDate" />

    <TextView
        android:id="@+id/tvPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="+222"
        android:textSize="20dp"
        android:visibility="visible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@android:color/holo_green_light"
        />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="31/12/18"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/tvType"
        app:layout_constraintBottom_toBottomOf="@id/tvType" />

    <TextView
        android:id="@+id/tvType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="Credited on"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="@id/order_currency_price"
        app:layout_constraintTop_toBottomOf="@id/order_currency_price" />
</androidx.constraintlayout.widget.ConstraintLayout>