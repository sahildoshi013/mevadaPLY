<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/roImg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="10"
            app:civ_shadow_color="#ce000000"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tvRoTitle"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_toEndOf="@id/roImg"
            android:layout_toRightOf="@id/roImg"
            android:minLines="2"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:padding="20dp"/>

        <TextView
            android:id="@+id/tvRoDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/roImg"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tvRoPointInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Points"
            android:layout_below="@id/tvRoDesc"/>
        <TextView
            android:id="@+id/tvRoPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_below="@id/tvRoDesc"
            android:layout_toEndOf="@id/tvRoPointInfo"
            android:textSize="20sp"
            android:background="@android:color/transparent"
            android:layout_toRightOf="@id/tvRoPointInfo"
            android:padding="8sp" />
        <Button
            android:id="@+id/btnRoRedeem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/redeem"
            android:layout_below="@id/tvRoDesc"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/roundedbutton"
            android:textColor="@android:color/white"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/btnRoCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/cancel"
            android:layout_below="@id/tvRoDesc"
            android:layout_toLeftOf="@id/btnRoRedeem"
            android:layout_toStartOf="@id/btnRoRedeem"
            android:background="@drawable/roundedbutton"
            android:textColor="@android:color/white"
            android:layout_margin="4dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>