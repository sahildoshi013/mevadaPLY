<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Welcome"
    tools:showIn="@layout/app_bar_welcome"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/viewBackground"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/company_logo"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:padding="8dp"
        android:contentDescription="@string/company_logo" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/viewBackground"
        android:background="@color/colorAccent"/>

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imgUserProfile"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="2dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="5"
            app:civ_shadow_color="#ce000000" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="@string/Hyphen"
            android:textSize="24sp"
            android:layout_below="@id/imgUserProfile"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tvArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="@string/Hyphen"
            android:textSize="16sp"
            android:layout_below="@id/tvName"
            android:layout_marginStart="16dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp" />
    <TextView
        android:id="@+id/tvPoints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Hyphen"
        android:textSize="50sp"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingEnd="16dp"
        android:layout_below="@id/tvArea"
        android:gravity="center"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/tvPointType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pointDesc"
        android:gravity="center"
        android:textSize="25sp"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingEnd="16dp"
        android:layout_below="@id/tvPoints"
        android:textColor="@color/colorAccent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPointType">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/design_trends"
            android:drawableStart="@drawable/ic_color_lens_white_24dp"
            android:onClick="showDesignTrends"
            android:drawableLeft="@drawable/ic_color_lens_white_24dp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="8dp"
            android:textColor="@android:color/white"
            android:padding="4dp"
            style="?android:attr/buttonBarStyle"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/redeem"
            android:drawableStart="@drawable/ic_local_grocery_store_white_24dp"
            android:drawableLeft="@drawable/ic_local_grocery_store_white_24dp"
            android:onClick="showRedeemOffers"
            android:background="@drawable/roundedbutton"
            android:layout_margin="8dp"
            android:padding="4dp"
            android:textColor="@android:color/white"
            style="?android:attr/buttonBarStyle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:padding="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/company_name"
            android:drawableTop="@drawable/ic_account_balance_black_24dp"
            android:textSize="25sp"
            android:autoLink="all"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/company_details"
            android:textSize="15sp"
            android:autoLink="all"
            android:gravity="center"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>

</RelativeLayout>
